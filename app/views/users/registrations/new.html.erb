<%= render "shared/header" %>
<%= form_with model: @user, url: user_registration_path, class: 'registration-main contaiber', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      ユーザー情報入力
    </h1>
  </div>

  <%= render 'shared/error_messages', model: f.object %>


  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="info-text">【必須】</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"user_email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="info-text">【必須】</span>
      <div class ="info-text"> ※英字と数字の両方を含めて設定してください</div>
    </div>
    <%= f.password_field :password, class:"input-default", id:"user_password", placeholder:"6文字以上の半角英数字" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)</label>
      <span class="info-text">【必須】</span>
    </div>
     <div class ="info-text"> ※上記と同じパスワードを入力して下さい</div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"user_password-confirmation" %>
  </div>

  <div class="row p-2 mt-5 mb-3 bg-light"></div>


  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">ニックネーム</label>
      <span class="info-text">【必須】</span>
    </div>
    <%= f.text_area :nickname, class:"input-default", id:"user_nickname", maxlength:"40" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">名前</label>
      <span class="info-text">【必須】</span>
    </div>
    <div class ="info-text"> 例）田中太郎</div>
    <%= f.text_area :name, class:"input-default", id:"user_name", maxlength:"40" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">名前(全角カナ)</label>
      <span class="info-text">【必須】</span>
    </div>
    <div class ="info-text"> 例)タナカタロウ</div>
    <%= f.text_area :name_kana, class:"input-default", id:"user_name_kana" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">電話番号</label>
      <span class="info-text">【必須】</span>
    </div>
    <div class ="info-text">※ハイフン(-)を含めず入力してください。例) 0258000000 </div>
      <%= f.text_area :tel, class:"input-default", id:"user_tel" %>
  </div>
  <div class="form-group">
    <h2 class='form-bottom-text'>
      「ユーザー登録」のボタンを押すことにより、
      <span>利用規約</span>
      に同意したものとみなします
    </h2>
  </div>
  <div class='register-btn'>
    <%= f.submit "ユーザー登録" ,class:"register-red-btn rounded" %>
  </div>
</div>
<% end %>

<%= render "shared/footer" %>