<%= render "shared/header" %>

<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Top</a></li>
    <li class="breadcrumb-item active" aria-current="page"><%= @shop.name %></li>
  </ol>
</nav>

<div class = "container">
  <h6><%= @shop.name_kana %>
    <h3 class= "mt-3"><%= @shop.name %></h3>
  </h6>

  <div class="shop-navs">
    <div class="shop-nav">
      <%= image_tag "shopimage.png",class:"rounded",size: '400x300' %>
    </div>
    <div class="shop-nav">
      <ul class="shop_lists">
        <li class="shop_list">こだわり
          <div><%= @shop.text%></div>
        </li>
        <li class="shop_list">ジャンル
          <div><%= @shop.genre.name%></div>
        </li>
        <li class="shop_list">住所
          <div><%= @shop.address%></div>
        </li>
        <li class="shop_list">電話番号
          <div><%= @shop.tel%></div>
        </li>
        <li class="shop_list">開店時間
          <div><%= @shop.opentime_at%></div>
        </li>
        <li class="shop_list">閉店時間
          <div><%= @shop.closetime_at%></div>
        </li>
        <li class="shop_list">駐車場
          <div><%= @shop.parking.name%></div>
        </li>
        <li class="shop_list">駐車場説明
          <div><%= @shop.parking_explain%></div>
        </li>
      </ul>
    </div>
  </div>
  <div class="d-flex justify-content-center mt-4">
    <%= render"shared/orderbtn"%>
  </div>
</div>

<div class="item-navs text-center">
  <%= render "shop_tab"%>
</div>


<%= render "shared/new_menu"%>
<%= render "shared/footer" %>