<%= form_with model: @shop, url: new_shop_registration_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap container'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      店舗情報入力
    </h1>
  </div>

  <%# <%= render 'shared/error_messages', model: f.object %> 

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="info-text">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"shop_email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="info-text">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"shop_password", placeholder:"6文字以上の半角英数字" %>
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)</label>
      <span class="info-text">必須</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"shop_password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">お店の名前</label>
      <span class="info-text">必須</span>
    </div>
    <%= f.text_area :name, class:"input-default", id:"shop_name", placeholder:"店名・店舗名", maxlength:"40" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">お店の名前(全角カナ)</label>
      <span class="info-text">必須</span>
    </div>
    <%= f.text_area :name_kana, class:"input-default", id:"shop_name_kana", placeholder:"例) テンメイ・テンポメイ" %>
  </div>


  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">お店のこだわり</label>
      <span class="info-text">必須</span>
    </div>
      <%= f.text_area :text, class: :form__text, id:"shop_text" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">お店住所</label>
      <span class="info-text">必須</span>
    </div>
      <%= f.text_area :address, class:"input-default", id:"shop_address" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">建物名</label>
    </div>
      <%= f.text_area :building_name, class:"input-default", id:"shop_:building_name" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">電話番号</label>
      <span class="info-text">必須</span>
    </div>
      <%= f.text_area :tel, class:"input-default", id:"shop_tel" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="holiday">定休日</label>
      <span class="info-text">必須</span>
    </div>
    <ul class='holidays'>
      <li class='holiday'><%= f.check_box :holiday, {multiple: true}, "日",nil %>日曜日</li>
      <li class='holiday'><%= f.check_box :holiday, {multiple: true}, "月",nil %>月曜日</li>
      <li class='holiday'><%= f.check_box :holiday, {multiple: true}, "火",nil %>火曜日</li>
      <li class='holiday'><%= f.check_box :holiday, {multiple: true}, "水",nil %>水曜日</li>
      <li class='holiday'><%= f.check_box :holiday, {multiple: true}, "木",nil %>木曜日</li>
      <li class='holiday'><%= f.check_box :holiday, {multiple: true}, "金",nil %>金曜日</li>
      <li class='holiday'><%= f.check_box :holiday, {multiple: true}, "土",nil %>土曜日</li>
    </ul>
  </div>

  <div class="form-group"  .form-inline.text-left>
    <div class='form-text-wrap'>
      <label class="form-text">開店時間</label>
      <span class="info-text">必須</span>
    </div>
      <%= f.time_select :opentime_at, id:"shop_opentime" %>
  </div>

  <div class="form-group"  .form-inline.text-left>
    <div class='form-text-wrap'>
      <label class="form-text">閉店時間</label>
      <span class="info-text">必須</span>
    </div>
      <%= f.time_select :closetime_at, id:"shop_closetime" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">駐車場の有無</label>
      <span class="info-text">必須</span>
        <%# <%= f.collection_select(:parking_id, Parking.all, :id, :name, {}, {class:"select-box", id:"shop_parking"}) %> 
    </div>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">駐車場の説明</label>
    </div>
    <%= f.text_area :parking_explain, class: :form__text, id:"shop_parking_explain" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">お店のジャンル</label>
      <span class="info-text">必須</span>
        <%# <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"select-box", id:"shop_genre"}) %> 
    </div>
  </div>




  <div class="form-group">
    <h2 class='form-bottom-text'>
      「会員登録」のボタンを押すことにより、
      <span>利用規約</span>
      <br>に同意したものとみなします
    </h2>
  </div>
  <div class='register-btn'>
    <%= f.submit "会員登録" ,class:"register-red-btn" %>
  </div>
  <%# <p class='register-info'>本人情報の登録について</p> %>
</div>
<% end %>